<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Your permissions remain unchanged -->

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <application
        android:name=".utils.notifications.NotificationsApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/new_logo_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ADHDTaskManager"
        tools:targetApi="s">
        <receiver
            android:name=".utils.alarm_manager.AlarmReceiver"
            android:exported="false"
            />
        <activity
            android:name=".ADHDTaskManager"
            android:exported="true"
            android:label="@string/title_activity_video_splash"
            android:theme="@style/Theme.ADHDTaskManager">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.help_screen.WebViewActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ADHDTaskManager">
        </activity>
    </application>
</manifest>